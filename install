ROOT=$PWD
SAV=$HOME/dotfiles.sav
mkdir -p $SAV/bin $SAV/ssh $SAV/keys

cd $ROOT/dots
for f in *; do mv $HOME/.$f $SAV/$f; ln -s $PWD/$f $HOME/.$f; done

cd $ROOT/bin
mkdir $HOME/bin
for f in *; do mv $HOME/bin/$f $SAV/bin/$f; ln -s $PWD/$f $HOME/bin/$f; done

cd $ROOT/vagrant
for f in Vagrantfile; do mv $HOME/$f $SAV/$f; ln -s $PWD/$f $HOME/$f; done

cd $ROOT/ssh
mkdir $HOME/.ssh && chmod go-rwx $HOME/.ssh
for f in *; do mv $HOME/.ssh/$f $SAV/ssh/$f; ln -s $PWD/$f $HOME/.ssh/$f; done

cd $HOME/src/keys
for f in *; do mv $HOME/.ssh/$f $SAV/keys/$f; ln -s $PWD/$f $HOME/.ssh/$f; done
